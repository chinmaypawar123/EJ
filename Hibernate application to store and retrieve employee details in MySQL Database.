Iterator it=ebook.iterator();
while(it.hasNext()){
Emp eachrecord=(Emp)it.next(); 
out.print(eachrecord.getEmpno() +" "); 
out.print(eachrecord.getEmpname() +"<br>"); 
out.print(eachrecord.getEmpsal() +"<br>"); 
